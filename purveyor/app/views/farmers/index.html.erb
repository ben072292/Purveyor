<h1>Participating Farmers</h1>

<table cellspacing = "10">
  <thead>
    <% if admin? %>
    <tr>
      <th align="left">Name</th>
      <th align="left">Name of Business</th>
      <th align="left">Contact Number</th>
      <th align="left">Contact Email</th>
      <th align="left">Bio</th>
      <th align="left">Location</th>
      <th align="left"></th>
      <th align="left"></th>
      <th></th>
    </tr>
    <% else if customer?%>
    <tr>
      <th align="left">Name of Business</th>
      <th align="left">Bio</th>
      <th align="left"></th>
      <th align="left"></th>
      <th></th>
    </tr>
    <% else %>
    <% render "restricted/show" %>
    <% end %>
    <% end %>
  </thead>

  <tbody>
    <% @farmers.each do |farmer| %>
    <tr>
      <% if admin? %>
      <td><%= farmer.name %></td>
      <td><%= farmer.nameofbusiness %></td>
      <td><%= farmer.contactnumber %></td>
      <td><%= farmer.contactemail %></td>
      <td><%= link_to 'Read More', farmer %></td>
      <td><%= farmer.location %></td>
      
      <td><%= link_to 'Edit', edit_farmer_path(farmer) %></td>
      <td><%= link_to 'Destroy', farmer, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      <% else %>
      <td><%= farmer.nameofbusiness %></td>
      <td><%= link_to 'Read More', farmer %></td>
      
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin? %>
<%= link_to 'New Farmer', new_farmer_path %>
<% end %>
